<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/search_background"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="126dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_search_drive"
                        style="@style/HeaderH4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="23dp"
                        android:text="@string/search"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/text_user_id"
                style="@style/HeaderH14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="90dp"
                android:text="@string/search_user_id"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_search_back" />

            <TextView
                android:id="@+id/text_search_custom"
                style="@style/HeaderH4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_custom"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/text_user_id"
                app:layout_constraintTop_toBottomOf="@+id/text_user_id" />

            <ImageView
                android:id="@+id/img_search_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_background_white"
                app:layout_constraintStart_toStartOf="@id/text_search_custom"
                app:layout_constraintTop_toBottomOf="@id/text_search_custom" />

            <TextView
                android:id="@+id/text_today_drive"
                style="@style/HeaderH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="32dp"
                android:text="@string/today_drive"
                android:textColor="@color/gray5_sub_495057"
                app:layout_constraintStart_toStartOf="@+id/img_search_background"
                app:layout_constraintTop_toTopOf="@+id/img_search_background" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search_area_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:background="@drawable/ic_ui_search_btn_unselect_android"
                android:paddingRight="4dp"
                android:text="@string/area"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_today_drive" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search_area_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:background="@drawable/ic_ui_search_btn_unselect_android"
                android:paddingRight="4dp"
                android:text="@string/area"
                app:layout_constraintStart_toStartOf="@id/img_search_background"
                app:layout_constraintTop_toTopOf="@+id/btn_search_area_1" />

            <TextView
                android:id="@+id/text_search_1"
                style="@style/HeaderH4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="@string/search_text_1"
                android:textColor="@color/gray5_sub_495057"
                app:layout_constraintBottom_toBottomOf="@+id/btn_search_area_2"
                app:layout_constraintStart_toStartOf="@id/btn_search_area_2"
                app:layout_constraintTop_toTopOf="@+id/btn_search_area_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:background="@drawable/ic_ui_search_btn_unselect_android"
                android:paddingRight="4dp"
                android:text="@string/main_charo_theme"
                app:layout_constraintStart_toStartOf="@+id/btn_search_area_1"
                app:layout_constraintTop_toTopOf="@+id/btn_search_area_1" />

            <TextView
                android:id="@+id/text_search_2"
                style="@style/HeaderH4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:text="@string/search_text_2"
                android:textColor="@color/gray5_sub_495057"
                app:layout_constraintBottom_toBottomOf="@+id/btn_search_theme"
                app:layout_constraintStart_toStartOf="@+id/btn_search_theme"
                app:layout_constraintTop_toTopOf="@+id/btn_search_theme" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search_caution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:background="@drawable/ic_ui_search_btn_unselect_android"
                android:paddingRight="4dp"
                android:text="@string/caution"
                app:layout_constraintStart_toStartOf="@+id/btn_search_theme"
                app:layout_constraintTop_toTopOf="@+id/btn_search_theme" />

            <TextView
                android:id="@+id/text_search_3"
                style="@style/HeaderH4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:text="@string/search_text_3"
                android:textColor="@color/gray5_sub_495057"
                app:layout_constraintBottom_toBottomOf="@+id/btn_search_caution"
                app:layout_constraintStart_toStartOf="@+id/btn_search_caution"
                app:layout_constraintTop_toTopOf="@+id/btn_search_caution" />

            <ImageButton
                android:id="@+id/img_search_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_search_btn_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_search_caution" />

            <TextView
                android:id="@+id/text_search_start"
                style="@style/SectionH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_start"
                android:textColor="@color/blue_main_0f6fff"
                app:layout_constraintBottom_toBottomOf="@+id/img_search_start"
                app:layout_constraintEnd_toEndOf="@+id/img_search_start"
                app:layout_constraintStart_toStartOf="@id/img_search_start"
                app:layout_constraintTop_toTopOf="@id/img_search_start" />

            <ImageButton
                android:id="@+id/img_search_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>