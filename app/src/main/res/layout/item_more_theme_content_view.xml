<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_more_theme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="8:5"
            android:layout_marginTop="0dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/result_search_shape"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/img_more_theme_heart"
            app:layout_constraintCircleRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_home_heart"
            app:layout_constraintEnd_toEndOf="@id/img_more_theme"
            app:layout_constraintTop_toTopOf="@+id/img_more_theme" />

        <TextView
            android:id="@+id/text_more_theme_title"
            style="@style/HeaderH12Android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/main_charo_today_drive_title"
            android:ellipsize="end"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/img_more_theme"
            app:layout_constraintTop_toBottomOf="@+id/img_more_theme" />

        <TextView
            android:id="@+id/chip_more_theme_1"
            style="@style/HeaderH9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_border_blue_radius_20"
            android:includeFontPadding="false"
            android:paddingHorizontal="11dp"
            android:paddingVertical="2dp"
            android:text="@string/theme1"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="10dp"
            app:chipStrokeColor="@color/blue_main_0f6fff"
            app:chipStrokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@+id/text_more_theme_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chip_more_theme_2"
            style="@style/HeaderH9"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_border_blue_radius_20"
            android:includeFontPadding="false"
            android:paddingHorizontal="11dp"
            android:paddingVertical="2dp"
            android:text="@string/theme1"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="10dp"
            app:chipStrokeColor="@color/blue_main_0f6fff"
            app:chipStrokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@+id/text_more_theme_title"
            app:layout_constraintStart_toEndOf="@id/chip_more_theme_1" />

        <TextView
            android:id="@+id/chip_more_theme_3"
            style="@style/HeaderH9"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_border_blue_radius_20"
            android:includeFontPadding="false"
            android:paddingHorizontal="11dp"
            android:paddingVertical="2dp"
            android:text="@string/theme1"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="10dp"
            app:chipStrokeColor="@color/blue_main_0f6fff"
            app:chipStrokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@+id/text_more_theme_title"
            app:layout_constraintStart_toEndOf="@id/chip_more_theme_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>