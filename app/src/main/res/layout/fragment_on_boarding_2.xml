<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.onBoarding.OnBoardingTwoFragment">

    <Button
        android:id="@+id/btn_skips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/noto_sans_cjkkr_medium"
        android:lineHeight="24sp"
        android:layout_marginTop="7dp"
        android:text="@string/skip"
        android:textColor="@color/blue_main"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_onBoarding_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="5:6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_on_boarding_looking_2"
            android:src="@drawable/onboarding_background_2_android" />



        <TextView
            android:id="@+id/text_on_boarding_looking_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_onBoarding_2"
            app:layout_constraintBottom_toTopOf="@id/text_on_boarding_information2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans_cjkkr_bold"
            android:text="@string/searching"
            android:textColor="@color/blue_main"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/text_on_boarding_information2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_on_boarding_looking_2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:lineSpacingExtra="0dp"
            android:includeFontPadding="false"
            android:lines="2"
            android:gravity="center"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="@string/on_boarding_2"
            android:textColor="@color/gray5_sub"
            android:textSize="15sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>